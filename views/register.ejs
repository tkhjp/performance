<!DOCTYPE html>
<html>
  <head>
    <%- include('meta') %>
  </head>
  <body>
    <%- include('header', { user: null }) %>
    <div class="container">
    <h1>登録</h1>
    <% if (message) { %>
    <p><%= message %></p>
    <% } %>
    <form method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="username">ユーザー名</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="hogehoge" />
        <label for="password">パスワード</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="passwd" />
        <label for="last_name">氏</label>
        <input type="text" name="last_name" id="last_name" class="form-control" />
        <label for="first_name">名</label>
        <input type="text" name="first_name" id="first_name" class="form-control" />
        <label for="icon">アイコン</label>
        <input type="file" name="icon" id="icon" class="form-control" />
        <div class="checkbox">所属組織</div>
        <% organizations.forEach((organization) => { %>
          <label>
            <input type="checkbox" name="organization" value=<%= organization.id %>>
            <%= organization.name %>
          </label>
        <% }) %>
        <div><input type="submit" class="btn btn-primary" /></div>
      </div>
    </form>
    </div>
  </body>
</html>


